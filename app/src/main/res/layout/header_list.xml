<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_color"
    android:layout_weight="0.3">

    <ImageView
        android:id="@+id/userProfilePictureprofil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="16sp">
    </ImageView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pin"
        android:layout_marginRight="38dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/userProfilePictureprofil"
         />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/calendar_ic"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/userProfilePictureprofil"
        android:layout_toEndOf="@+id/userProfilePictureprofil"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fbName"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/userProfilePictureprofil"
        android:layout_margin="20sp"/>
</RelativeLayout>